@prefix fs: <http://fairspace.io/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://www.schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix osiris: <http://osiris.fairspace.io/ontology#> .
@prefix icdo3: <http://icdo3.fairspace.io/ontology#> .
@prefix fhir: <http://hl7.org/fhir/STU3/> .

########################
###   Fixed Shapes   ###
########################

## Class Shapes

fs:FileShape a fs:ClassShape ;
    sh:description "A single file." ;
    sh:name "File" ;
    sh:targetClass fs:File ; 
    sh:ignoredProperties ( rdf:type owl:sameAs fs:blobId ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:fileSizeShape,
        fs:md5Shape,
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape ;
    sh:property
        fs:fileSizeShape,
        fs:md5Shape,
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape .

fs:DirectoryShape a fs:ClassShape ;
    sh:description "A directory containing multiple files." ;
    sh:name "Directory" ;
    sh:targetClass fs:Directory ; 
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape ;
    sh:property
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape .

fs:CollectionShape a fs:ClassShape ;
    sh:description "Collection of files with associated metadata and access rules." ;
    sh:name "Collection" ;
    sh:targetClass fs:Collection ; 
    sh:ignoredProperties ( rdf:type owl:sameAs fs:collectionType ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape ;
    sh:property
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        rdfs:labelShape,
        rdfs:commentShape .

fs:UserShape a sh:NodeShape ;
    sh:closed true ; 
    sh:description "Description for fs:User" ;
    sh:name "User" ;
    sh:targetClass fs:User ; 
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    sh:property
        rdfs:labelShape,
        rdfs:commentShape,
        fs:userEmailShape .

## Property Shapes

fs:blobIdShape a fs:PropertyShape ;
    sh:name "BlobID";
    sh:description "Blob ID in the blob store" ;
    sh:path fs:blobId ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

fs:collectionTypeShape a fs:PropertyShape ;
    sh:name "Collection type";
    sh:description "Collection Type";
    sh:path fs:collectionType ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

rdfs:labelShape a fs:PropertyShape ;
    sh:name "Label" ;
    sh:description "Human readable label for this resource." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 128 ;
    fs:fixedShape true ;
    sh:path rdfs:label . 
 
rdfs:commentShape a fs:PropertyShape ;
    sh:name "Description" ;
    sh:description "Human friendly description." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:fixedShape true ;
    sh:path rdfs:comment . 
     
fs:dateCreatedShape a fs:PropertyShape ;
    sh:name "Date created" ;
    sh:description "Time at point of creation" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateCreated .

fs:dateModifiedShape a fs:PropertyShape ;
    sh:name "Modified time" ;
    sh:description "Time at point last modification" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateModified .

fs:dateDeletedShape a fs:PropertyShape ;
    sh:name "Deleted at" ;
    sh:description "Time at point deletion." ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateDeleted . 

fs:filePathShape a fs:PropertyShape ; 
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "File path" ;
    sh:datatype xsd:string ;
    sh:description "File path" ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:filePath .

fs:fileSizeShape a fs:PropertyShape ;
    sh:name "File size" ; 
    sh:description "File size in bytes" ; 
    sh:datatype xsd:long ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:fileSize .

fs:md5Shape a fs:PropertyShape ;
    sh:name "MD5 checksum" ; 
    sh:description "Hash uniquely identifying the content of this file" ; 
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:md5 .

fs:userEmailShape a fs:PropertyShape ;
    sh:name "Email" ;
    sh:description "Email address" ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:email .


## Relation Shapes

fs:createdByShape a fs:RelationShape ;
    sh:name "Created By" ;
    sh:description "User that created this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:createdBy .

fs:modifiedByShape a fs:RelationShape ; 
    sh:name "Last Modified By" ;
    sh:description "User that last modified this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:modifiedBy .

fs:deletedByShape a fs:RelationShape ; 
    sh:name "Deleted By" ;
    sh:description "User that deleted this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:deletedBy .


########################
### Fixed Vocabulary ###
########################

fs:ClassShape a sh:NodeShape .
fs:PropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:RelationShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:Class a rdf:Class .

xsd:string rdfs:label "String" ;
    rdfs:comment "Reference to xsd:string." .

xsd:integer rdfs:label "Integer" ;
    rdfs:comment "Reference to xsd:integer." .

xsd:long rdfs:label "Integer(long)" ;
    rdfs:comment "Reference to xsd:long." .

xsd:date rdfs:label "Date" ;
    rdfs:comment "Reference to xsd:date." .

xsd:dateTime rdfs:label "Date and time" ;
    rdfs:comment "Reference to xsd:datetime." .

fs:File a fs:Class .
fs:Collection a fs:Class.
fs:User a fs:Class .
fs:Directory a fs:Class ;
    rdfs:subClassOf fs:File .

fs:dateCreated a rdf:Property .
fs:createdBy a rdf:Property .
fs:inverseRelation a rdf:Property .
