@prefix fs: <http://fairspace.io/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://www.schema.org/> .

########################
### Fixed Namespaces ###
########################

fs:FOAF-Namespace a sh:PrefixDeclaration ;
   sh:name "Friend of a friend (FOAF)" ;
   sh:prefix "foaf" ;
   fs:fixedShape true ;
   sh:namespace <http://xmlns.com/foaf/0.1/> .

fs:RDF-Namespace a sh:PrefixDeclaration ;
   sh:name "RDF" ;
   sh:prefix "rdf" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

fs:RDFS-Namespace a sh:PrefixDeclaration ;
   sh:name "RDF Schema (RDFS)" ;
   sh:prefix "rdfs" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/2000/01/rdf-schema#> .

fs:XSD-Namespace a sh:PrefixDeclaration ;
   sh:name "XSD" ; 
   sh:prefix "xsd" ;
   fs:fixedShape true ;
   sh:namespace <http://www.w3.org/2001/XMLSchema#> .

fs:Schema-Namespace a sh:PrefixDeclaration ;
   sh:name "schema.org" ; 
   sh:prefix "schema" ;
   fs:fixedShape true ;
   sh:namespace <http://schema.org/> .

fs:Fairspace-Namespace a sh:PrefixDeclaration ;
   sh:name "Fairspace (global)" ; 
   sh:prefix "fs" ;
   fs:fixedShape true ;
   sh:namespace <http://fairspace.io/ontology#> .

########################
###   Fixed Shapes   ###
########################

## Class Shapes

fs:FileShape a fs:ClassShape ;
    sh:description "A single file." ;
    sh:name "File" ;
    sh:targetClass fs:File ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs fs:blobId ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:fileSizeShape,
        fs:md5Shape,
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape ;
    sh:property
        fs:fileSizeShape,
        fs:md5Shape,
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape .

fs:DirectoryShape a fs:ClassShape ;
    sh:description "A directory containing multiple files." ;
    sh:name "Directory" ;
    sh:targetClass fs:Directory ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape ;
    sh:property
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape .

fs:CollectionShape a fs:ClassShape ;
    sh:description "Collection of files with associated metadata and access rules." ;
    sh:name "Collection" ;
    sh:targetClass fs:Collection ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs fs:collectionType ) ;
    fs:fixedShape true ;
    fs:systemProperties 
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape ;
    sh:property
        fs:filePathShape,
        fs:createdByShape,
        fs:dateCreatedShape,
        fs:modifiedByShape,
        fs:dateModifiedShape,
        fs:deletedByShape,
        fs:dateDeletedShape,
        fs:labelShape,
        fs:commentShape .

fs:UserShape a sh:NodeShape ;
    sh:closed true ; 
    sh:description "A current or previous user of this workspace." ;
    sh:name "User" ;
    sh:targetClass fs:User ;
    fs:machineOnly true ;
    sh:ignoredProperties ( rdf:type owl:sameAs ) ;
    fs:fixedShape true ;
    sh:property
        fs:username,
        fs:email .

## Property Shapes

fs:blobIdShape a fs:DatatypePropertyShape ;
    sh:name "BlobID";
    sh:description "Blob ID in the blob store" ;
    sh:path fs:blobId ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

fs:collectionTypeShape a fs:DatatypePropertyShape ;
    sh:name "Collection type";
    sh:description "Collection Type";
    sh:path fs:collectionType ;
    sh:datatype xsd:string ;
    fs:machineOnly true .

fs:labelShape a fs:DatatypePropertyShape ;
    sh:name "Label" ;
    sh:description "Human readable label for this resource." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 128 ;
    fs:fixedShape true ;
    fs:importantProperty true ;
    sh:path rdfs:label . 
 
fs:commentShape a fs:DatatypePropertyShape ;
    sh:name "Description" ;
    sh:description "Human friendly description." ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:fixedShape true ;
    sh:path rdfs:comment . 
     
fs:dateCreatedShape a fs:DatatypePropertyShape ;
    sh:name "Date created" ;
    sh:description "Time at point of creation" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateCreated .

fs:dateModifiedShape a fs:DatatypePropertyShape ;
    sh:name "Modified time" ;
    sh:description "Time at point last modification" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateModified .

fs:dateDeletedShape a fs:DatatypePropertyShape ;
    sh:name "Deleted at" ;
    sh:description "Time at point deletion." ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:dateDeleted . 

fs:filePathShape a fs:DatatypePropertyShape ; 
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "File path" ;
    sh:datatype xsd:string ;
    sh:description "File path" ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:filePath .

fs:fileSizeShape a fs:DatatypePropertyShape ;
    sh:name "File size" ; 
    sh:description "File size in bytes" ; 
    sh:datatype xsd:long ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:fileSize .

fs:md5Shape a fs:DatatypePropertyShape ;
    sh:name "MD5 checksum" ; 
    sh:description "Hash uniquely identifying the content of this file" ; 
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:md5 .

fs:email a fs:DatatypePropertyShape ;
    sh:name "Email" ;
    sh:description "Email address" ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:email .

fs:username a fs:DatatypePropertyShape ;
    sh:name "Username" ;
    sh:description "This users name, as provided by identity provider." ;
    sh:datatype xsd:string ;
    sh:maxLength 128 ;
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:username .

## Relation Shapes

fs:createdByShape a fs:RelationShape ;
    sh:name "Created By" ;
    sh:description "User that created this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:createdBy .

fs:modifiedByShape a fs:RelationShape ; 
    sh:name "Last Modified By" ;
    sh:description "User that last modified this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:modifiedBy .

fs:deletedByShape a fs:RelationShape ; 
    sh:name "Deleted By" ;
    sh:description "User that deleted this resource." ;
    sh:class fs:User ; 
    sh:maxCount 1 ;
    fs:machineOnly true ;
    fs:fixedShape true ;
    sh:path fs:deletedBy .


########################
### Fixed Vocabulary ###
########################

fs:ClassShape a sh:NodeShape .
fs:DatatypePropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .

fs:ExternalIRIPropertyShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .

fs:ControlledVocabularyPropertyShape a rdf:Class ; 
    rdfs:subClassOf sh:PropertyShape .

fs:RelationShape a rdf:Class ;
    rdfs:subClassOf sh:PropertyShape .
fs:Class a rdf:Class .

xsd:string rdfs:label "String" ;
    rdfs:comment "Reference to xsd:string." .

xsd:integer rdfs:label "Integer" ;
    rdfs:comment "Reference to xsd:integer." .

xsd:long rdfs:label "Integer(long)" ;
    rdfs:comment "Reference to xsd:long." .

xsd:date rdfs:label "Date" ;
    rdfs:comment "Reference to xsd:date." .

xsd:dateTime rdfs:label "Date and time" ;
    rdfs:comment "Reference to xsd:datetime." .

fs:File a fs:Class .
fs:Collection a fs:Class.
fs:User a fs:Class .
fs:Directory a fs:Class ;
    rdfs:subClassOf fs:File .

fs:dateCreated a rdf:Property .
fs:createdBy a rdf:Property .
fs:inverseRelation a rdf:Property .
